{
    "name": "nova-kit/nova-packages-tool",
    "description": "Tool for Laravel Nova Packages Development",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "NovaKit\\NovaPackagesTool\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\": "workbench/database/"
        }
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "laravel/nova": "^4.27.4"
    },
    "require-dev": {
        "orchestra/testbench": "^6.24 || ^7.0 || ^8.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "NovaKit\\NovaPackagesTool\\LaravelServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "nova:build": [
            "npm --prefix './vendor/laravel/nova/' ci",
            "npm ci",
            "TAILWIND_MODE=build npm run prod"
        ],
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench vendor:publish --tag=nova-assets --ansi --force",
            "@php vendor/bin/testbench vendor:publish --tag=laravel-assets --ansi --force",
            "@php vendor/bin/testbench workbench:create-sqlite-db",
            "@php vendor/bin/testbench migrate:refresh"
        ],
        "start": [
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ]
    },
    "minimum-stability": "stable"
}
